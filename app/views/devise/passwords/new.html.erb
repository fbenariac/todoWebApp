<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Forgot your password?</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, role:'form') do |f| %>
            <%= devise_error_messages! %>
            <fieldset>
              <div class="form-group">
                <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control', autofocus: true %>
              </div>
              <div class="actions">
                <%= f.submit 'Send me reset password instructions', class: 'btn btn-success btn-block' %>
              </div>
            </fieldset>
          <% end %>
          <br />
          <div class="text-center">
            <%= render 'devise/shared/links' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
